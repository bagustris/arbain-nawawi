---
layout: null
---
[
  {% for post in site.posts %}
    {
      "title": {{ post.title | jsonify }},
      "url": {{ post.url | relative_url | jsonify }},
      "excerpt": {{ post.excerpt | strip_html | strip_newlines | jsonify }},
      "content": {{ post.content | strip_html | strip_newlines | jsonify }},
      "categories": {{ post.categories | jsonify }},
      "tags": {{ post.tags | jsonify }},
      "date": {{ post.date | date: "%Y-%m-%d" | jsonify }}
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  {% assign pages = site.pages | where_exp: "item", "item.path contains '.md'" | where_exp: "item", "item.path != 'search.md'" | where_exp: "item", "item.path != 'index.md'" | where_exp: "item", "item.path != 'README.md'" %}
  {% if site.posts.size > 0 and pages.size > 0 %},{% endif %}
  {% for page in pages %}
    {
      "title": {% if page.title %}{{ page.title | jsonify }}{% else %}"Hadith {{ page.path | replace: '.md', '' | plus: 0 }}"{% endif %},
      "url": {{ page.url | relative_url | jsonify }},
      "excerpt": {{ page.content | strip_html | truncatewords: 50 | strip_newlines | jsonify }},
      "content": {{ page.content | strip_html | strip_newlines | jsonify }},
      "categories": [],
      "tags": [],
      "date": ""
    }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
